@inherits DotNetNuke.Web.Mvc.Framework.DnnWebViewPage<IEnumerable<Christoc.Modules.Chart.Models.Employee>>
@*@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers*@

@{
    Layout = null;
}


<body>
    <div>
        <a href="javascript:void(0);" onclick="employee.openAddEmployee()" class="btn btn-success">Add Employee</a>
        <input type="hidden" id="ModuleId" value="@Dnn.ModuleContext.ModuleId" />
        <input type="hidden" id="TabId" value="@Dnn.ModuleContext.TabId" />
    </div>
    <div>
        <table class="table table-striped" id="tbEmployee">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Gender</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    <tr>
                        <td class="table-plus">@employee.Id</td>
                        <td>@employee.Name</td>
                        <td>@employee.Gender</td>
                        <td>
                            <a href="javascript:void(0);" onclick="employee.get(@employee.Id)" class="dropdown-item">Edit</a>
                            <a class="dropdown-item" href="javascript:void(0);" onclick="employee.delete(@employee.Id)"> Delete</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>

    <div class="modal" id="addEmployee">
        <div class="modal-dialog">
            <div class="modal-content">
                <div>
                    <input hidden id="Id" />
                    <!-- Modal Header -->
                    <div class="modal-header">
                        <h4 class="modal-title">Employee</h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>

                    <!-- Modal body -->
                    <div class="modal-body">
                        <div>
                            <label>Name:</label>
                            <input type="text" class="form-control" id="Name" name="FullName">
                        </div>
                        <div>
                            <label>Gender:</label>
                            <input type="text" class="form-control" id="Gender" name="Gender">
                        </div>
                    </div>

                    <!-- Modal footer -->
                    <div class="modal-footer">
                        <button type="button" class="btn btn-success" onclick="employee.save()">Save</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="modal" id="DetailEmployee">
        <div class="modal-dialog">
            <div class="modal-content">
